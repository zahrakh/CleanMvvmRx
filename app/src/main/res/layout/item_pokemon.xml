<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:background="@drawable/shape_card_background"
    android:minHeight="@dimen/spacing_xxl7">

    <ImageView
        android:id="@+id/iv_poster"
        android:layout_width="@dimen/spacing_xxl6"
        android:layout_height="@dimen/spacing_xxl6"
        android:contentDescription="@string/content_description_poster_image"
        android:src="@drawable/placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pokemon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_m"
        android:textSize="@dimen/text_l"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/iv_poster"
        app:layout_constraintStart_toEndOf="@id/iv_poster"
        app:layout_constraintTop_toTopOf="@id/iv_poster"
        tools:text="Monster" />

</androidx.constraintlayout.widget.ConstraintLayout>